    .main_temp h1 {
        margin: 0;
        font-size: 62px;
        font-weight: 500;
        line-height: 60px;
        font-family: "Righteous";
    }

    .main_temp_scales {
        width: auto;
        height: 60px;
        text-align: left;
        position: relative;
        overflow: hidden;
        z-index: 0;
    }

    /* .main_temp_scales>.main_temp_overlay{
        width:100%;
        height:50%;
        position: absolute;top:0;left:0;
        background:#fff;
    } */
    .main_temp_scale.light {
        opacity: 0.6;
    }

    .main_temp_scale {
        width: 100%;
        height: 30px;
        font-size: 16px;
        line-height: 30px;
